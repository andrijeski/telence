{
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "deno"], // Added "deno"
    "module": "ESNext",
    "moduleResolution": "Bundler", // Added moduleResolution
    "target": "ESNext",
    "strict": true,
    "allowImportingTsExtensions": true, // Allow .ts extensions in imports
    "noEmit": true, // Deno handles emitting, not tsc
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": false,
    "noFallthroughCasesInSwitch": true
  }
}
